<%= render "devise/shared/nav" %>

<div class="container arena-show-page">
	<div class="row">
		<div class="col s12">
			<h1 class="center-align", style="color: #33b5e5;">
				<%= @arena.name %>
			</h1>
		</div>
	</div>

		<!-- Confirming this should display the form with time slots -->
	<div class="row">
		<div class="col s12 arena-call">
			<h3>Call the arena to confirm your booking.</h3>
			<h5 class="red-text"><%= @arena.number %></h5>
			<button class="js-confirm-booking waves-effect waves-light btn", style="margin-bottom: 20px; margin-top: 10px;">I confirmed my booking</button>
		</div>
	</div>

		<!-- Reserving time slots opens up the invite friends form -->
	<div class="row js-reserve-time" style="display:none;">
		<div class="arena-form", style="padding: 25px;">
			<%= form_for [@arena, @game], url: arena_games_path(@arena) do |f|%>
				<div class="field">
					<%= label_tag :date %>
					<%= date_field_tag :date, nil, :class => "datepicker" %>
				</div>

				<div class="field">
					<%= f.label :start_time %>
					<%= f.time_field :start_time %>
				</div>

				<div class="field">
					<%= f.label :end_time %>
					<%= f.time_field :end_time %>
				</div>

				<div class="center-align">
					<%= f.submit "Reserve", :class => "waves-effect waves-light btn", :style => "margin-top: 10px; margin-bottom: 10px" %>
				</div>
			<% end %>
		</div>
	</div>
</div>