<%= render "devise/shared/nav" %>

<div class="container game-show-page">
	<div class="row">
		<div class="col s12">
			<h4 class="center-align" style="text-transform: uppercase;">Invite your friends</h4>
			<h5 class="center-align"><%= (@game.start_time).strftime("%A %b %d from %I:%M %p") %> - <%= (@game.end_time).strftime("%I:%M %p") %></h5>
		</div>
	</div>

	<div class="row">
		<div class="col s12">

			<form action="/games/<%= @game.id %>/invites" method="POST" class="invite-form">
				<% @game.arena.size.times do |player| %>
					<div class="col s4 field">
						<label>Name</label>
						<input type="text" name="invite[][name]" placeholder="Enter your friend's name">
					</div>

					<div class="col s4 field">
						<label>Email</label>
						<input type="text" name="invite[][email]" placeholder="Enter your friend's email">
					</div>

					<div class="col s4 field">
						<label>Number</label>
						<input type="text" name="invite[][number]" placeholder="Enter your friend's number">
					</div>
				<%end%>

				<button class="waves-effect waves-light btn" type="submit">Submit</button>
				<input type="hidden" name="authenticity_token"
				     value="<%= form_authenticity_token %>">
			</form>
		</div>
	</div>
</div>