<%= render "devise/shared/nav" %>
<div class="row">
	<!-- Left card -->
	<div class="col s4">
		<div class="user-profile">
			<div class="card">
			  	<div class="card-header">
			  		<% if @user.image.url %>
				    	<img src="<%= @user.image.url %>"/>
			    	<% else %>
				    	<img src="https://s-media-cache-ak0.pinimg.com/originals/3b/f0/77/3bf0775b0d234545d14a5941be966ab2.jpg"/>
			    	<% end %>
			  	</div>

			  	<% if @user.id == current_user.id %>
				  	<div class="center-align" style="padding-top: 10px;">
						<%= link_to "Edit Profile", edit_user_registration_path, :class => "waves-effect waves-light btn" %>
				  	</div>
				<% else %>
					<div class="center-align" style="padding-top: 10px">
						<%= link_to "Message User", new_conversation_path, :class => "waves-effect waves-light btn" %>
					</div>
			  	<% end %>

			  	<div class="card-content">
			    	<h3><%= @user.username %></h3>

			    	<% if @user.first_name && @user.last_name %>
				    	<h4><%= @user.first_name %> <%= @user.last_name %></h4>
					<% else %>
						<h4>Fake Name</h4>
					<% end %>

					<% if @user.bio %>
				    	<p><% @user.bio %></p>
					<% else %>
						<p>This is your fake bio. This will stay here till you give me your real information so that I know you're really real.</p>
					<% end %>
			  	</div>

			  	<div class="card-footer user-footer">
			  		<h4>Email: <%= @user.email %></h4>

			  		<% if @user.number %>
				  		<h4>Number: <% @user.number %></h4>
					<% else %>
						<h4>Number: (123) 456-7890</h4>
					<% end %>
			  	</div>
			</div>
		</div>
	</div>

	<!-- Middle card -->
	<div class="col s4">
		<div class="user-profile">
			<div class="card">
			  	<div class="card-header">
			  		<h5 class="center-align">PAST GAMES:</h5>
			  	</div>

			  	<div class="card-content games-card">
			  		<ul>
				  		<% @user.games.each do |game| %>
				  			<% if game.start_time < Time.now %>
						  		<li><%= game.arena.name %> on <%= (game.start_time).strftime("%d/%m/%y") %></li>
						  	<% end %>
					  	<% end %>
					</ul>
			  	</div>

			  	<div class="card-footer user-footer">
			  		<h4 class="red-text">Member since: <%= (@user.created_at).strftime("%d/%m/%y") %></h4>
			  	</div>
			</div>
		</div>
	</div>

	<!-- Right card -->
	<div class="col s4">
		<div class="user-profile">
			<div class="card">
			  	<div class="card-header">
			  		<h5 class="center-align">UPCOMING GAMES:</h5>
			  	</div>

			  	<div class="card-content games-card">
			  		<ul>
				  		<% @user.games.each do |game| %>
				  			<% if game.start_time > Time.now %>
						  		<li>
						  			<a href="/games/<%= game.id %>">
								  		<%= game.arena.name %> on <%= (game.start_time).strftime("%d/%m/%y") %>
								  	</a>
						  		</li>
						  	<% end %>
					  	<% end %>
					</ul>
			  	</div>

			  	<div class="card-footer user-footer">
			  		<h4 class="red-text">Last sign in: <%= (@user.last_sign_in_at).strftime("%d/%m/%y") %></h4>
			  	</div>
			</div>
		</div>
	</div>

</div>
