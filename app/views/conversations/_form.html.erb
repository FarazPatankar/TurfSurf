<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="field">
      <%= f.label :recipients %>
      <%= f.select(:recipients, User.all.collect {|p| [ p.username, p.id ] }, {}, { multiple: true , style: "display: inline-block;", class: "chosen-select form-control" })%>
    </div>
    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
    </div>

    <%= f.submit "Send Message", class: "waves-effect waves-light btn" %>
<% end %>